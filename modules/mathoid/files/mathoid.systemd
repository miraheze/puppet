[Unit]
Description="mathoid service"
After=network.target

[Service]
# up ulimit -n a bit
LimitNOFILE=10000
User=www-data
Group=www-data
Environment="NODE_PATH=/srv/mathoid/node_modules"
Environment="MATHOID_PORT=10042"
SyslogIdentifier=mathoid
Restart=always
RestartSec=2s
# wait 60 seconds for a graceful restart before killing the master
TimeoutStopSec=60
WorkingDirectory=/srv/mathoid
ExecStart=/usr/bin/nodejs server.js -c /etc/mathoid/config.yaml

[Install]
WantedBy=multi-user.target
