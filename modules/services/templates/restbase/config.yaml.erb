# RESTBase config for large or small wiki installs
#
# - sqlite backend
# - parsoid at https://parsoid-lb.miraheze.org
# - wiki at https://<wiki>.miraheze.org/w/api.php or https://<custom_wiki>/w/api.php
#

num_workers: 1

worker_heap_limit_mb: 120

default_project: &default_project
  x-modules:
    - spec:
        paths:
          /{api:v1}:
            x-modules:
              - path: /etc/mediawiki/restbase/miraheze_project_v1.yaml
                options: &default_options
                  parsoid:
                    host: https://parsoid-lb.miraheze.org
                    grace_ttl: 1000000
                  action:
                    apiUriTemplate: "{{'https://{domain}/w/api.php'}}"
                    baseUriTemplate: "{{'https://{domain}/api/rest_v1'}}"
                  citoid:
                    host: http://127.0.0.1:6927
                  purged_cache_control: test_purged_cache_control
                  # Cache control for purged endpoints allowing short-term client caching
                  purged_cache_control_client_cache: test_purged_cache_control_with_client_caching
                  pdf:
                    # Cache PDF for 5 minutes since it's not purged
                    cache_control: s-maxage=600, max-age=600
                    uri: http://localhost:3030
                  skip_updates: false
              - path: projects/proxy.yaml
                options: &proxy_options
                  backend_host_template: '{{"/{domain}/sys/legacy"}}'
                  block_external_reqs: true
          /{api:sys}: &default_sys
            x-modules:
              - path: /etc/mediawiki/restbase/miraheze_project_sys.yaml
                options: *default_options
              - path: projects/proxy.yaml
                options:
                  <<: *proxy_options
                  block_external_reqs: false
              - spec:
                  paths:
                    /legacy/key_value:
                      x-modules:
                        - path: sys/key_value.js
                    /legacy/page_revisions:
                      x-modules:
                        - path: sys/page_revisions.js
                    /table: &table_spec
                      x-modules:
                        - path: sys/table.js
                          options:
                            conf:
                              storage_groups:
                                - name: default
                                  domains: /./
                              backend: sqlite
                              dbname: db.sqlite3
                              pool_idle_timeout: 20000
                              retry_delay: 250
                              retry_limit: 10
                              show_sql: false


# The root of the spec tree. Domains tend to share specs by referencing them
# using YAML references.
spec_root: &spec_root
  title: "The RESTBase root"
  # Some more general RESTBase info
  x-request-filters:
    - path: lib/security_response_header_filter.js

  x-sub-request-filters:
    - type: default
      name: http
      options:
        allow:
          - pattern: /^https?:\/\/[a-zA-Z0-9\._-]+\/w\/api\.php/
            forward_headers: true
          - pattern: /^https?:\/\/parsoid-lb.miraheze.org.+/
            forward_headers: true
          - pattern: /^https?:\/\//
  paths:
<%- @wikis.each_pair do |wiki, value| -%>
<%- if value == true -%>
    /{domain:<%= wiki %>.miraheze.org}: *default_project
<%- else -%>
    /{domain:<%= value %>}: *default_project
<%- end -%>
<%- end -%>

    /robots.txt:
      get:
        x-request-handler:
          - static:
              return:
                status: 200
                headers:
                  content-type: text/plain
                body: |
                  User-agent: *
                  Allow: /*/v1/?doc
                  Disallow: /

info:
  name: restbase

services:
  - name: restbase
    module: hyperswitch
    conf:
      port: 7231
      spec: *spec_root
      salt: secret
      default_page_size: 125
      user_agent: RESTBase
      ui_name: RESTBase
      ui_url: https://www.mediawiki.org/wiki/RESTBase
      ui_title: RESTBase docs

logging:
  name: restbase
  level: warn
  streams:
    - type: stdout
