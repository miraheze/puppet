-- Grants for 'root'@'localhost'

GRANT ALL PRIVILEGES
    ON *.* TO 'root'@'localhost'
    IDENTIFIED BY '<%= @password %>'
    REQUIRE SSL
    WITH GRANT OPTION;

-- Grants for 'icinga'@'%'

GRANT REPLICATION CLIENT ON *.* TO 'icinga'@'%'
    IDENTIFIED BY '<%= @icinga_password %>';

-- Grants for 'exporter'@'localhost'

GRANT USAGE, PROCESS, REPLICATION CLIENT
    ON *.* TO 'exporter'@'localhost'
    IDENTIFIED BY '<%= @exporter_password %>';

-- Grants for 'replica'@'%'

GRANT REPLICATION SLAVE
    ON *.* TO 'replica'@'%'
    IDENTIFIED BY '<%= @mariadb_replica_password %>'
    REQUIRE SSL;

-- Grants for 'dbbackup_user'@'%'
GRANT USAGE, PROCESS, REPLICATION CLIENT, SELECT, SHOW DATABASES, SHOW VIEW, LOCK TABLES, RELOAD
    ON *.* TO 'dbbackup_user'@'%'
    IDENTIFIED BY '<%= @dbbackup_user_password %>'
    REQUIRE SSL;
