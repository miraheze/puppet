[Unit]
Description=LdapCherry - Ldap UI
Wants=local-fs.target network.target
After=local-fs.target network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/srv/ldapcherry
ExecStart=/usr/local/bin/ldapcherryd  -c /etc/ldapcherry/ldapcherry.ini -D
Restart=on-failure
PrivateTmp=true
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ldapcherry

[Install]
WantedBy=multi-user.target
