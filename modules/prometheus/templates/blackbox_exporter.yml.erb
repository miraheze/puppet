modules:
  tcp_connect:
    prober: tcp
    timeout: 5s
  ssh_banner:
    prober: tcp
    timeout: 5s
    tcp:
      query_response:
      - expect: "^SSH-2.0-"
  icmp:
    prober: icmp
    timeout: 5s
  http_post_2xx:
    prober: http
    timeout: 5s
    http:
      method: POST
      headers:
        Content-Type: application/json
      body: '{"text": "hi"}'
  http_connect:
    prober: http
    timeout: 5s
    http:
      no_follow_redirects: false
      fail_if_ssl: true
  http_200_300_connect:
    prober: http
    timeout: 5s
    http:
      no_follow_redirects: false
      fail_if_ssl: true
      valid_status_codes: [200, 201, 202, 203, 204, 205, 206, 207, 208, 226, 300, 301, 302, 303, 304, 305, 306, 307, 308]
  https_connect:
    prober: http
    timeout: 5s
    http:
      preferred_ip_protocol: "ip4"
      no_follow_redirects: false
      fail_if_not_ssl: true
      tls_config:
        insecure_skip_verify: false
  https_200_300_connect:
    prober: http
    timeout: 10s
    http:
      no_follow_redirects: false
      fail_if_not_ssl: true
      valid_status_codes: [200, 201, 202, 203, 204, 205, 206, 207, 208, 226, 300, 301, 302, 303, 304, 305, 306, 307, 308]
      tls_config:
        insecure_skip_verify: false
  # Check for a MediaWiki page, hosted by Miraheze
  https_mediawiki_cp:
    prober: http
    timeout: 60s
    http:
      headers:
        'Host': 'meta.miraheze.org'
        'X-Miraheze-Debug': 'mw132.miraheze.org'
      no_follow_redirects: false
      fail_if_not_ssl: true
      tls_config:
        insecure_skip_verify: false
