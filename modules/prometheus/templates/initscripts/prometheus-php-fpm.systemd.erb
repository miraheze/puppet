[Unit]
Description=Prometheus exporter for php-fpm metrics
Documentation=https://github.com/Lusitaniae/phpfpm_exporter

[Service]
Restart=always
User=www-data
ExecStart=/usr/local/bin/prometheus-phpfpm-exporter server --phpfpm.socket-paths="unix:///run/php/fpm-www.sock" --phpfpm.status-path="/php_status"
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
