[Unit]
Description=Prometheus exporter for redis metrics
Documentation=https://github.com/oliver006/redis_exporter

[Service]
Restart=always
User=www-data
EnvironmentFile=/etc/default/prometheus-redis
ExecStart=/usr/local/bin/redis_exporter --log-format=txt --namespace=redis --web.listen-address=:9121 --web.telemetry-path=/metrics -redis.password ${EXPORTER_REDIS_PASSWORD}
ExecReload=/bin/kill -HUP $MAINPID
SyslogIdentifier=redis_exporter
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
