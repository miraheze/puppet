# Note: This file is managed by puppet.
<%
    htsets = @facts['numa']['device_to_htset'][@numa_iface]
    num_threads = htsets.flatten.size
-%>
global
    user haproxy
    group haproxy
    stats socket <%= @socket %> mode 600 expose-fd listeners level admin
    log /var/lib/haproxy/dev/log local0 info
    <%- if @use_graylog -%>
    log 127.0.0.1:10514 len <%= @log_length %> local0 info
    tune.http.logurilen 2048
    <%- end -%>
    # do not keep old processes longer than 5m after a reload
    hard-stop-after 5m
    set-dumpable
    nbthread <%= num_threads %>


defaults
    mode       http
    <%- if @extended_logging -%>
    log-format "timestamp=%tr pid=%pid time_backend_response=%Tr response_time=%Td remote_addr=%[var(txn.real_ip)] frontend_ssl_protocol=%[ssl_fc_protocol] frontend_ssl_ciphers=%sslc request_method=%HM request_host=%[capture.req.hdr(0)] request_path=%HPO request_query=%HQ http_user_agent=%[capture.req.hdr(2)] http_accept_language=%[capture.req.hdr(3)] http_range=%[capture.req.hdr(4)] http_accept=%[capture.req.hdr(5)] http_referer=%[capture.req.hdr(1)] haproxy_cache_backend=%f status=%ST response_size=%B request_size=%U termination_state=%ts cache_status=%[capture.res.hdr(0)] x_cache=%[capture.res.hdr(2)]"
    <%- if @use_graylog -%>
    log-format '{"timestamp":"%tr","pid":%pid,"time_backend_response":%Tr,"response_time":%Td,"remote_addr":"%[var(txn.real_ip)]","frontend_ssl_protocol":"%[ssl_fc_protocol]","frontend_ssl_ciphers":"%sslc","request_method":"%HM","request_host":"%[capture.req.hdr(0)]","request_path":"%HPO","request_query="%HQ","http_user_agent": "%[capture.req.hdr(2)]","http_accept_language":"%[capture.req.hdr(3)]","http_range":"%[capture.req.hdr(4)]","http_accept":"%[capture.req.hdr(5)]","http_referer":"%[capture.req.hdr(1)]","haproxy_cache_backend":"%f","status":%ST,"response_size":%B,"request_size":%U,"termination_state":"%ts","cache_status":"%[capture.res.hdr(0)]","x_cache":"%[capture.res.hdr(2)]"}'
    <%- end -%>
    <%- else -%>
    log-format "%rt %Tr %Tw %Tc %ST %hr %hs %ts"
    <%- end -%>
    option     dontlognull
    option     accept-invalid-http-request
    option     accept-invalid-http-response
    option     http-ignore-probes
    retries    1
    timeout    connect 50000
    timeout    client 500000
    timeout    server 500000
