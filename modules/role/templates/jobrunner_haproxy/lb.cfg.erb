global
        maxconn 200000

listen jobrunner
        option httpchk
        http-check send meth GET  uri /rpc/RunSingleJob.php
        http-check expect status 405
        http-reuse always
        mode http
        bind :9007
        bind :::9007
        balance roundrobin
        cookie SERVER insert indirect nocache
        <%- @backends.each_pair do | name, property | -%>
        <%- if property['depool'] != true-%>
        server <%= name %>  <%= property['ip'] %>:<%= property['port'] %> ssl verify none check cookie <%= name %>
        <%- end -%>
        <%- end -%>
        http-request set-header Host jobrunner.wikitide.net

