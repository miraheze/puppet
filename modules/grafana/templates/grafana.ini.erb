[server]
domain = grafana.miraheze.org
root_url = %(protocol)s://%(domain)s/

[users]
# user signup / registration
allow_sign_up = true

default_theme = light

auto_assign_org_role = Viewer

auto_assign_org = true

[auth.anonymous]
# enable anonymous access
enabled = true
org_name = Miraheze
org_role = Viewer

[smtp]
enabled=true

host = mail.miraheze.org:25

user = noreply

password = <%= @mail_password %>

from_address = noreply@miraheze.org

[database]
url = mysql://grafana:<%= @grafana_password %>@db4.miraheze.org:3306/grafana
type = mysql
ssl_mode = true
ca_cert_path = /etc/ssl/certs/GlobalSign.crt
server_cert_name = *.miraheze.org
