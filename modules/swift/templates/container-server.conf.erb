[DEFAULT]
# Only in object-server must you use ipv6 without bracket.
bind_ip = [::]
bind_port = 6001
workers = 12
# bind_timeout = 30
# backlog = 4096
user = swift
swift_dir = /etc/swift
devices = /srv/node
mount_check = false
fallocate_reserve = 1%

[pipeline:main]
pipeline = recon container-server

[app:container-server]
use = egg:swift#container

[filter:recon]
use = egg:swift#recon
recon_cache_path = /var/cache/swift

[container-replicator]
concurrency = 3

[container-updater]
concurrency = 1

[container-auditor]

[container-sync]
# You can override the default log routing for this app here (don't
# use set!):
log_name = container-sync
log_facility = LOG_LOCAL1
log_level = INFO
# default is one sync each 5 mins. lowering to one per minute
interval = 60
# default maximum synchronization time is one minute, increasing it to 5 mins that would help with larger objects like docker layers.
container_time = 300
