[DEFAULT]
# Only in object-server must you use ipv6 without bracket.
bind_ip = [::]
bind_port = 6002
workers = 2
# bind_timeout = 30
# backlog = 4096
user = swift
swift_dir = /etc/swift
devices = /srv/node
mount_check = false
fallocate_reserve = 1%

[pipeline:main]
pipeline = recon account-server

[app:account-server]
use = egg:swift#account

[filter:recon]
use = egg:swift#recon

[account-replicator]
concurrency = 0

[account-auditor]
concurrency = 1

[account-reaper]
