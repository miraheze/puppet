redis:
  listen: /run/nutcracker/nutcracker.sock 0666
  hash: md5
  server_connections: 1
  distribution: ketama
  auto_eject_hosts: false
  redis: true
  redis_auth: <%= @redis_password %>
  server_retry_timeout: 6000
  server_failure_limit: 6
  timeout: 6000
  backlog: 1024
  servers:
<%- if @new_servers -%>
     # Redis server (rdb1)
     - 51.89.160.131:6379:1
 <%- else -%>
     # Redis server (misc2)
     - 81.4.127.174:6379:1
 <%- end -%>
