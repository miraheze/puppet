// Configuration file for MediaWiki Jobrunner
// This file is managed by Puppet
{
    "groups": {
        "basic": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "*"
            ],
            // Job types to exempt (useful when combined with "*")
            "exclude": [
                "AssembleUploadChunks",
                "DataDumpGenerateJob",
                "ImportDumpJob",
                "ImportDumpNotifyJob",
                "parsoidCachePrewarm",
                "PublishStashedFile",
                "RecordLintJob",
                "RequestWikiAIJob",
                "refreshLinks",
                "refreshLinksDynamic",
                "refreshLinksPrioritized",
                "uploadFromUrl",
                "webVideoTranscode",
                "webVideoTranscodePrioritized",
                "NamespaceMigrationJob",
                "smw.update",
                "smw.changePropagationClassUpdate",
                "CreateWikiJob"
            ],
            "low-priority": [
                "htmlCacheUpdate"
            ]
        },
        "html": {
            // Number of runner processes in this group
            "runners": 1,
            "include": [
                "htmlCacheUpdate",
                "refreshLinks",
                "refreshLinksDynamic",
                "refreshLinksPrioritized"
            ]
        },
        "hi": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "DataDumpGenerateJob",
                "RecordLintJob"
            ]
        },
        "createwiki": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "CreateWikiJob"
            ]
        },
        "importdump": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "ImportDumpJob"
            ]
        },
        "importdumpnotify": {
            // Number of runner processes in this group
            "runners": 2,
            // Job types to include ("*" means "all")
            "include": [
                "ImportDumpNotifyJob"
            ]
        },
        "managewiki": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "NamespaceMigrationJob",
                "RequestWikiAIJob"
            ]
        },
        "parsoidcache": {
            // Number of runner processes in this group
            "runners": 8,
            // Job types to include ("*" means "all")
            "include": [
                "parsoidCachePrewarm"
            ]
        },
        "smw": {
            // Number of runner processes in this group
            "runners": 1,
            // Job types to include ("*" means "all")
            "include": [
                "smw.update",
                "smw.changePropagationClassUpdate"
            ]
        },
        "transcode": {
            "runners": 1,
            "include": [
                "webVideoTranscode",
                "webVideoTranscodePrioritized"
            ]
        },
        "upload": {
            "runners": 1,
            "include": [
                "AssembleUploadChunks",
                "PublishStashedFile",
                "uploadFromUrl"
            ]
        }
    },

    "limits": {
        // How many times to let jobs be recycled before abandoning
        "attempts": {
            "*": 3,
            "LocalPageMoveJob": 6,
            "renameUser": 6
        },
        // How long jobs can be claimed before being recycled
        "claimTTL": {
            "*": 3600,
            "DataDumpGenerateJob": 86400,
            "ImportDumpJob": 259200,
            "NamespaceMigrationJob": 9000,
            "webVideoTranscode": 86400,
            "webVideoTranscodePrioritized": 86400
        },
        // runJobs.php process time limits
        "real": {
            "*": 300,
            "cirrusSearchElasticaWrite": 600,
            "DataDumpGenerateJob": 86400,
            "ImportDumpJob": 259200,
            "NamespaceMigrationJob": 9000,
            "webVideoTranscode": 86400,
            "webVideoTranscodePrioritized": 86400
        },
        // runJobs.php memory limits
        "memory": {
            "*": "1200M",
            "cirrusSearchElasticaWrite": "1400M",
            "ImportDumpJob": "2000M",
            "parsoidCachePrewarm": "1400M",
            "refreshLinks": "1400M",
            "refreshLinksDynamic": "1400M",
            "refreshLinksPrioritized": "1400M",
            "RequestWikiAIJob": "2000M",
            "smw.update": "1400M",
            "smw.changePropagationClassUpdate": "1400M"
        }
    },

    "redis": {
        // Ready queue trackers
        "aggregators": [
            "<%= @redis_server_ip %>"
        ],
        // Main queue servers
        "queues": [
            "<%= @redis_server_ip %>"
        ],
        "password": "<%= @redis_password %>"
    },

    // Command used to launch a runner for a given job queue
    "dispatcher": "curl -XPOST -s -a 'http:\/\/127.0.0.1:9007\/rpc\/RunJobs.php?wiki=%(db)u&type=%(type)u&maxtime=%(maxtime)u&maxmem=%(maxmem)u'"
}
