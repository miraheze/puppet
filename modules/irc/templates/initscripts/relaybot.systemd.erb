[Unit]
Description=Miraheze IRC<->Discord relay bot instance

[Service]
Type=simple
User=irc
SyslogIdentifier=relaybot<%= @instance %>
ExecStart=/usr/bin/dotnet run --project <%= @install_path %>/IrcDiscordRelay.csproj --configuration Release
Restart=on-failure
WorkingDirectory=<%= @install_path %>
Environment=HOME=<%= @install_path %>

[Install]
WantedBy=multi-user.target
